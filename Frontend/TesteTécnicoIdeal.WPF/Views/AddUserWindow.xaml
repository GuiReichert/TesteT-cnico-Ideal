<Window x:Class="TesteTécnicoIdeal.WPF.Views.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TesteTécnicoIdeal.WPF.Views"
        mc:Ignorable="d"
        Title="Adicionar Cadastro" Height="350" Width="450" WindowStartupLocation="CenterScreen" Background="#FF1B2D46" ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Id" Foreground="White" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25,0,0,0"/>
        <TextBox x:Name="txtId" Height="30" FontSize="18"  Margin="130,5,70,10" Grid.ColumnSpan="2" IsEnabled="False"/>

        <TextBlock Text="Nome" Foreground="White" FontSize="18" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="25,0,0,0"/>
        <TextBox x:Name="txtNome" Height="30" FontSize="18" Grid.ColumnSpan="2" Margin="130,5,70,10" Grid.Row="2"/>

        <TextBlock Text="Sobrenome" Foreground="White" FontSize="18" Grid.Row="4" Margin="25,10,180,0" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtSobrenome" Grid.Row="4" Height="30" FontSize="18" Grid.ColumnSpan="2" Margin="130,5,70,10"/>

        <TextBlock Text="Telefone" Foreground="White" FontSize="18" Grid.Row="6" Margin="25,10,180,0" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtTelefone" Grid.Row="6" Height="30" FontSize="16" Grid.ColumnSpan="2" Margin="130,5,70,10"/>


        <Button x:Name="btnSalvar" Content="Salvar" Width="100" Height="35" Background="#FF12243A" BorderBrush="#FF0E1E35" Foreground="White" FontSize="20" FontFamily="Arial"  Grid.Row="8" Click="btnSalvar_Click"/>
        <Button x:Name="btnCancelar" Content="Cancelar" Width="100" Height="35" Margin="5" Background="#FF12243A" BorderBrush="#FF0E1E35" FontSize="20" FontFamily="Arial" Foreground="White" Grid.Column="1" Grid.Row="8" Click="btnCancelar_Click"/>

    </Grid>
</Window>
