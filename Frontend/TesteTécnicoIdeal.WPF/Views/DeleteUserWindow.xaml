<Window x:Class="TesteTécnicoIdeal.WPF.Views.DeleteUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TesteTécnicoIdeal.WPF.Views"
        mc:Ignorable="d"
         Title="Excluir Cadastro" Height="200" Width="400" WindowStartupLocation="CenterScreen" Background="#FF1B2D46" ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Tem certeza que deseja excluir este cadastro?" Foreground="White" FontSize="17"  FontFamily="Arial" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Grid.ColumnSpan="2"/>

        <Button x:Name="btnConfirmar" Content="Excluir" Width="100" Height="35" Background="#FFB22222" BorderBrush="#FF8B0000" Foreground="White" FontSize="18" FontFamily="Arial"  Grid.Row="1" Click="btnConfirmar_Click"/>

        <Button x:Name="btnCancelar" Content="Cancelar" Width="100" Height="35" Background="#FF12243A" BorderBrush="#FF0E1E35" Foreground="White" FontSize="18" FontFamily="Arial" Grid.Row="1" Grid.Column="1" Click="btnCancelar_Click"/>
    </Grid>
</Window>
